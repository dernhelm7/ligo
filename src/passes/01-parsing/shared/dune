;; Stuff common to lexers and parsers of LIGO

;; Build of the lexer as a library

(ocamllex Lexer)

(library
  (name Shared)
  (public_name ligo.lexer.shared)
  (libraries
     ;; Vendors
     simple-utils
     Preprocessor
     LexerLib
     ParserLib
     ;; Third party
     getopt
     zarith
     str
     menhirLib
     terminal_size
     pprint)
  (modules
     Common Comments File Token Lexer LexerMainGen ParserMainGen)
  (modules_without_implementation
     Token Comments File)
  (preprocess
    (pps bisect_ppx --conditional)))
