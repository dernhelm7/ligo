(ocamllex Lexer)

;; Stuff common to lexers and parsers of LIGO

;; Build of the lexer as a library

(library
  (name Shared_lexer)
  (public_name ligo.lexer.shared)
  (libraries
     ;; Vendors
     simple-utils
     Preprocessor
     LexerLib
     ;; Third party
     getopt
     zarith
     str
     menhirLib
     terminal_size
     pprint)
  (modules
     Comments File Token Lexer Self_lexing LexerMainGen)
  (modules_without_implementation
     Token Comments File Self_lexing)
  (preprocess
    (pps bisect_ppx --conditional)))
